{    
    "Set a variable" : { 
        "scope": "adams_cmd",       
        "prefix": "var set var",         
        "body": [      
            "var set var=${1:\\$_self.${2:varname}} ${3|real,int,str,obj|}=$4",
            "$0"
        ],
        "description": "Set a variable"
    },
    "If statement" : { 
        "scope": "adams_cmd",       
        "prefix": "if ",         
        "body": [      
            "if condition=(eval($3))",
            "   $0",
            "end"
        ],
        "description": "For loop"
    },
    "For loop" : { 
        "scope": "adams_cmd",       
        "prefix": "for ",         
        "body": [      
            "for var=${1:\\$_self.${2:idx}} ${3|start_value=1 end_value=, obj=|}",
            "   $0",
            "end"
        ],
        "description": "For loop"
    },
    "Macro Header" : {
        "scope": "adams_cmd",
        "prefix": "macro_header ",
        "body": [
            "!USER_ENTERED_COMMAND ${1:command}",
            "! -----------------------------------------------------------------",
            "! MACRO NAME:  $TM_FILENAME",
            "! DESCRIPTION: ${2:description}   ",
            "! AUTHOR:      ${3:Ben Thornton (ben.thornton@hexagon.com)}",
            "!END_OF_PARAMETERS",
            "$0"
        ],
        "description": "Macro Header"        
    }
}