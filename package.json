{
    "name": "msc_adams",
    "displayName": "MSC Adams",
    "description": "Support for the MSC Adams lanugages",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./src/extension.ts",
    "activationEvents": [
        "onLanguage:adams_cmd",
        "onLanguage:adams_adm",
        "onLanguage:adams_acf",
        "onCommand:msc_adams.activate"
    ],
    "icon": "images/adams.png",
    "contributes": {
        "commands" : [
            {
                "command": "msc_adams.macros.makeHeader",
                "title": "MSC Adams: Make Macro Header"
            },
            {
                "command": "msc_adams.activate",
                "title": "MSC Adams: Activate"
            },
            {
                "command": "msc_adams.openInView",
                "title": "Open In View",
                "icon": "images/adams.svg"
            },
            {
                "command": "msc_adams.openViewHere",
                "title": "Open Adams View",
                "icon": "images/adams.svg"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "msc_adams.openInView",
                    "when": "resourceExtname == .cmd",
                    "group": "navigation"
                },
                {
                    "command": "msc_adams.openViewHere",
                    "when": "explorerResourceIsFolder == true",
                    "group": "navigation"
                }  
            ]
        },
        "capabilities": {
            "hoverProvider": "true"
        },
        "languages": [
            {
                "id": "adams_cmd",
                "aliases": [
                    "Adams CMD",
                    "adams_cmd"
                ],
                "extensions": [
                    ".cmd",
                    ".mac"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_adm",
                "aliases": [
                    "Adams ADM",
                    "adams_adm"
                ],
                "extensions": [
                    ".adm"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_acf",
                "aliases": [
                    "Adams ACF",
                    "adams_acf"
                ],
                "extensions": [
                    ".acf"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "adams_cmd",
                "scopeName": "source.cmd",
                "path": "./syntaxes/adams_cmd.tmLanguage.json"
            },
            {
                "language": "adams_adm",
                "scopeName": "source.adm",
                "path": "./syntaxes/adams_adm.tmLanguage.json"
            },
            {
                "language": "adams_acf",
                "scopeName": "source.acf",
                "path": "./syntaxes/adams_acf.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "adams_cmd",
                "path": "./snippets/adams_cmd.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^17.0.2"
    }
}
