{
    "name": "msc-adams",
    "displayName": "MSC Adams",
    "publisher": "savvyanalyst",
    "description": "Support for the MSC Adams lanugages",
    "version": "0.4.5",
    "repository": {
        "type": "git",
        "url": "https://github.com/bthornton191/adams_vscode.git"
    },
    "homepage": "https://github.com/bthornton191/adams_vscode",
    "bugs": {
        "url": "https://github.com/bthornton191/adams_vscode/issues"
    },
    "qna": "marketplace",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./src/extension.ts",
    "activationEvents": [
        "onLanguage:adams_cmd",
        "onLanguage:adams_adm",
        "onLanguage:adams_acf",
        "onLanguage:adams_msg",
        "onLanguage:adams_to",
        "onLanguage:python",
        "onCommand:msc_adams.activate",
        "onCommand:msc_adams.openInView",
        "onCommand:msc_adams.openViewHere"
    ],
    "icon": "./images/adams.png",
    "contributes": {
        "commands": [
            {
                "command": "msc_adams.macros.makeHeader",
                "title": "MSC Adams: Make Macro Header",
                "icon": "resources/icons/adams.svg"
            },
            {
                "command": "msc_adams.debugInAdams",
                "title": "MSC Adams: Debug Python Script in Adams",
                "icon": {
                    "light": "resources/icons/adams_debug_light.svg",
                    "dark": "resources/icons/adams_debug_dark.svg"
                }
            },
            {
                "command": "msc_adams.runSelection",
                "title": "MSC Adams: Run Selection in Adams View"
            },
            {
                "command": "msc_adams.runFile",
                "title": "MSC Adams: Run File in Adams View",
                "icon": {
                    "light": "resources/icons/adams_run_light.svg",
                    "dark": "resources/icons/adams_run_dark.svg"
                }
            },
            {
                "command": "msc_adams.activate",
                "title": "MSC Adams: Activate",
                "icon": "resources/icons/adams.svg"
            },
            {
                "command": "msc_adams.openInView",
                "title": "Open In View",
                "icon": "resources/icons/adams.svg"
            },
            {
                "command": "msc_adams.openViewHere",
                "title": "Open Adams View",
                "icon": "resources/icons/adams.svg"
            },
            {
                "command": "msc_adams.loadStubFiles",
                "title": "MSC Adams: Load adamspy stub files",
                "icon": "resources/icons/adams.svg"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "msc_adams.openInView",
                    "when": "resourceExtname == .cmd",
                    "group": "navigation"
                },
                {
                    "command": "msc_adams.openViewHere",
                    "when": "explorerResourceIsFolder == true",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "msc_adams.debugInAdams",
                    "when": "resourceExtname == .py",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "msc_adams.runSelection",
                    "when": "editorTextFocus && editorHasSelection && (resourceLangId == adams_cmd || resourceLangId == python)",
                    "group": "execution"
                }
            ],
            "editor/title/run": [
                {
                    "command": "msc_adams.runFile",
                    "when": "resourceLangId == adams_cmd || resourceLangId == python",
                    "group": "execution"
                }
            ]
        },
        "keybindings": [
            {
                "command": "msc_adams.runSelection",
                "when": "editorHasSelection && (resourceLangId == adams_cmd || resourceLangId == python)",
                "key": "ctrl+k ctrl+r"
            },
            {
                "command": "msc_adams.runFile",
                "when": "editorTextFocus && !editorHasSelection && (resourceLangId == adams_cmd || resourceLangId == python)",
                "key": "ctrl+k ctrl+r"
            }
        ],
        "capabilities": {
            "hoverProvider": "true"
        },
        "languages": [
            {
                "id": "adams_cmd",
                "aliases": [
                    "Adams CMD",
                    "adams_cmd"
                ],
                "extensions": [
                    ".cmd",
                    ".mac"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_adm",
                "aliases": [
                    "Adams ADM",
                    "adams_adm"
                ],
                "extensions": [
                    ".adm"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_acf",
                "aliases": [
                    "Adams ACF",
                    "adams_acf"
                ],
                "extensions": [
                    ".acf"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_msg",
                "aliases": [
                    "Adams Message",
                    "adams_msg"
                ],
                "extensions": [
                    ".msg"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_log",
                "aliases": [
                    "Adams View Log",
                    "adams_log"
                ],
                "filenamePatterns": [
                    "*aview*.log"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_to",
                "aliases": [
                    "Adams Tiem Orbit",
                    "adams_to"
                ],
                "extensions": [
                    ".mech"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "adams_log",
                "scopeName": "source.adams_log",
                "path": "./syntaxes/adams_log.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.line.adams_cmd": "adams_cmd"
                }
            },
            {
                "language": "adams_cmd",
                "scopeName": "source.adams_cmd",
                "path": "./syntaxes/adams_cmd.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.python": "python"
                }
            },
            {
                "language": "adams_adm",
                "scopeName": "source.adams_adm",
                "path": "./syntaxes/adams_adm.tmLanguage.json"
            },
            {
                "language": "adams_acf",
                "scopeName": "source.adams_acf",
                "path": "./syntaxes/adams_acf.tmLanguage.json"
            },
            {
                "language": "adams_msg",
                "scopeName": "source.adams_msg",
                "path": "./syntaxes/adams_msg.tmLanguage.json"
            },
            {
                "language": "adams_to",
                "scopeName": "source.adams_to",
                "path": "./syntaxes/adams_to.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "adams_cmd",
                "path": "./snippets/adams_cmd.json"
            },
            {
                "language": "python",
                "path": "./snippets/python.json"
            }
        ],
        "configuration": [
            {
                "title": "MSC Adams",
                "properties": {
                    "msc-adams.adamsLaunchCommand": {
                        "type": "string",
                        "title": "Adams Launch Command",
                        "default": "mdi.bat",
                        "description": "Path to the mdi.bat file in your Adams installation. Located in the common folder."
                    },
                    "msc-adams.debugOptions": {
                        "type": "object",
                        "title": "Debug Options",
                        "description": "Options to pass to the python debugger.",
                        "default": {
                            "justMyCode": true,
                            "subProcess": false
                        }
                    },
                    "msc-adams.runInAdams.substituteSelf": {
                        "type": "string",
                        "title": "Substitute $_self",
                        "description": [
                            "Substitute $_self in the current selection when running the",
                            " selection in Adams View with the name of the current file. ",
                            "If the value is not an existing object in the Adams View database ",
                            "a library by that name will be created."
                        ],
                        "default": ".vscode"
                    },
                    "msc-adams.runInAdams.substituteParams": {
                        "type": "boolean",
                        "title": "Substitute macro parameters",
                        "description": "Substitute macro parameter references with their default values if they are defined.",
                        "default": true
                    },
                    "msc-adams.runInAdams.autoLoadAdamspyStubs": {
                        "type": "boolean",
                        "title": "Auto Load adamspy Stubs",
                        "description": "Automatically load adamspy stub files when the extension is activated.",
                        "default": true
                    }
                }
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "[*Light*]": {
                    "textMateRules": [
                        {
                            "scope": "parameter.reference",
                            "settings": {
                                "foreground": "#41a189",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "variable",
                            "settings": {
                                "foreground": "#41a189"
                            }
                        },
                        {
                            "scope": "constant",
                            "settings": {
                                "foreground": "#bd785b",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "arguments",
                            "settings": {
                                "foreground": "#41a189"
                            }
                        },
                        {
                            "scope": "parameter.definition",
                            "settings": {
                                "foreground": "#41a189",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "selfParameter",
                            "settings": {
                                "foreground": "#775194"
                            }
                        },
                        {
                            "scope": "command.command",
                            "settings": {
                                "foreground": "#c07dff",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "command.control",
                            "settings": {
                                "foreground": "#c07dff"
                            }
                        },
                        {
                            "scope": "command.argument",
                            "settings": {
                                "foreground": "#3b8cd8",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "command.argument.continued",
                            "settings": {
                                "foreground": "#8ba7c2"
                            }
                        }
                    ]
                },
                "textMateRules": [
                    {
                        "scope": "parameter.reference",
                        "settings": {
                            "foreground": "#b9edfd",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "variable",
                        "settings": {
                            "foreground": "#b9edfd"
                        }
                    },
                    {
                        "scope": "parameter.definition",
                        "settings": {
                            "foreground": "#b9edfd9c",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "selfParameter",
                        "settings": {
                            "foreground": "#775194"
                        }
                    },
                    {
                        "scope": "command.command",
                        "settings": {
                            "foreground": "#d3a7fd",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "command.command.positional",
                        "settings": {
                            "foreground": "#9574b4",
                            "fontStyle": ""
                        }
                    },
                    {
                        "scope": "command.control",
                        "settings": {
                            "foreground": "#d3a7fd"
                        }
                    },
                    {
                        "scope": "command.argument",
                        "settings": {
                            "foreground": "#8ec7f0"
                        }
                    },
                    {
                        "scope": "command.argument.continued",
                        "settings": {
                            "foreground": "#6b97b4"
                        }
                    },
                    {
                        "scope": "msg.error",
                        "settings": {
                            "foreground": "#f50000",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "msg.warning",
                        "settings": {
                            "foreground": "#f5c800",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "msg.success",
                        "settings": {
                            "foreground": "#00bb19",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "msg.command",
                        "settings": {
                            "fontStyle": "bold"
                        }
                    }
                ]
            }
        }
    },
    "devDependencies": {
        "@types/node": "^17.0.2",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.3.9",
        "glob": "^10.3.12",
        "pid-cwd": "^1.2.0",
        "uuid": "^9.0.1"
    },
    "extensionDependencies": [
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-python.debugpy"
    ],
    "dependencies": {
        "temp": "^0.9.4"
    },
    "scripts": {
        "test": "run-tests.js"
    }
}
