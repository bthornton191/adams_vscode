{
    "name": "msc-adams",
    "displayName": "MSC Adams",
    "publisher": "savvyanalyst",
    "description": "Support for the MSC Adams lanugages",
    "version": "0.2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/bthornton191/adams_vscode.git"
    },
    "homepage": "https://github.com/bthornton191/adams_vscode",
    "bugs": {
        "url": "https://github.com/bthornton191/adams_vscode/issues"
    },
    "qna": "marketplace",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./src/extension.ts",
    "activationEvents": [
        "onLanguage:adams_cmd",
        "onLanguage:adams_adm",
        "onLanguage:adams_acf",
        "onLanguage:adams_to",
        "onLanguage:python",
        "onCommand:msc_adams.activate",
        "onCommand:msc_adams.openInView",
        "onCommand:msc_adams.openViewHere"
    ],
    "icon": "images/adams.png",
    "contributes": {
        "commands" : [
            {
                "command": "msc_adams.macros.makeHeader",
                "title": "MSC Adams: Make Macro Header",
                "icon": "images/adams.png"
            },
            {
                "command": "msc_adams.debugInAdams",
                "title": "MSC Adams: Debug Python Script in Adams",
                "icon": {
                    "light": "images/adams_debug_light.png",
                    "dark": "images/adams_debug_dark.png"}
            },
            {
                "command": "msc_adams.activate",
                "title": "MSC Adams: Activate",
                "icon": "images/adams.png"
            },
            {
                "command": "msc_adams.openInView",
                "title": "Open In View",
                "icon": "images/adams.png"
            },
            {
                "command": "msc_adams.openViewHere",
                "title": "Open Adams View",
                "icon": "images/adams.png"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "msc_adams.openInView",
                    "when": "resourceExtname == .cmd",
                    "group": "navigation"
                },
                {
                    "command": "msc_adams.openViewHere",
                    "when": "explorerResourceIsFolder == true",
                    "group": "navigation"
                }  
            ],
            "editor/title": [
                {
                    "command": "msc_adams.debugInAdams",
                    "when": "resourceExtname == .py",
                    "group": "navigation"
                }
            ]
        },
        "capabilities": {
            "hoverProvider": "true"
        },
        "languages": [
            {
                "id": "adams_cmd",
                "aliases": [
                    "Adams CMD",
                    "adams_cmd"
                ],
                "extensions": [
                    ".cmd",
                    ".mac"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_adm",
                "aliases": [
                    "Adams ADM",
                    "adams_adm"
                ],
                "extensions": [
                    ".adm"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_acf",
                "aliases": [
                    "Adams ACF",
                    "adams_acf"
                ],
                "extensions": [
                    ".acf"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "adams_to",
                "aliases": [
                    "Adams Tiem Orbit",
                    "adams_to"
                ],
                "extensions": [
                    ".mech"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "adams_cmd",
                "scopeName": "source.cmd",
                "path": "./syntaxes/adams_cmd.tmLanguage.json"
            },
            {
                "language": "adams_adm",
                "scopeName": "source.adm",
                "path": "./syntaxes/adams_adm.tmLanguage.json"
            },
            {
                "language": "adams_acf",
                "scopeName": "source.acf",
                "path": "./syntaxes/adams_acf.tmLanguage.json"
            },
            {
                "language": "adams_to",
                "scopeName": "source.to",
                "path": "./syntaxes/adams_to.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "adams_cmd",
                "path": "./snippets/adams_cmd.json"
            },
            {
                "language": "python",
                "path": "./snippets/python.json"
            }
        ],
        "configuration":[
            {
                "title": "MSC Adams",
                "properties": {
                    "msc-adams.adamsLaunchCommand": {
                        "type": "string",
                        "title": "Adams Launch Command",
                        "default": "mdi.bat",
                        "description": "Path to the mdi.bat file in your Adams installation. Located in the common folder."
                    }
                }
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {     
                "[*Light*]": {
                    "textMateRules": [
                        {
                            "scope": "parameter.reference",
                            "settings": {
                                "foreground": "#41a189",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "variable",
                            "settings": {
                                "foreground": "#41a189"
                            }
                        },
                        {
                            "scope": "constant",
                            "settings": {
                                "foreground": "#bd785b",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "arguments",
                            "settings": {
                                "foreground": "#41a189"
                            }
                        },
                        {
                            "scope": "parameter.definition",
                            "settings": {
                                "foreground": "#41a189",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "selfParameter",
                            "settings": {
                                "foreground": "#775194"
                            }
                        },
                        {
                            "scope": "command.command",
                            "settings": {
                                "foreground": "#c07dff",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "command.control",
                            "settings": {
                                "foreground": "#c07dff"
                            }
                        },
                        {
                            "scope": "command.argument",
                            "settings": {
                                "foreground": "#3b8cd8",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "command.argument.continued",
                            "settings": {
                                "foreground": "#8ba7c2"
                            }
                        }
                    ]
                },
                "textMateRules": [
                    {
                        "scope": "parameter.reference",
                        "settings": {
                            "foreground": "#b9edfd",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "variable",
                        "settings": {
                            "foreground": "#b9edfd"
                        }
                    },
                    {
                        "scope": "parameter.definition",
                        "settings": {
                            "foreground": "#b9edfd9c",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "selfParameter",
                        "settings": {
                            "foreground": "#775194"
                        }
                    },
                    {
                        "scope": "command.command",
                        "settings": {
                            "foreground": "#d3a7fd",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "command.command.positional",
                        "settings": {
                            "foreground": "#9574b4",
                            "fontStyle": ""
                        }
                    },
                    {
                        "scope": "command.control",
                        "settings": {
                            "foreground": "#d3a7fd"
                        }
                    },
                    {
                        "scope": "command.argument",
                        "settings": {
                            "foreground": "#8ec7f0"
                        }
                    },
                    {
                        "scope": "command.argument.continued",
                        "settings": {
                            "foreground": "#6b97b4"
                        }
                    }
                ]

            }
        }
    },
    "devDependencies": {
        "@types/node": "^17.0.2"
    },
    "extensionDependencies": [
        "ms-python.vscode-pylance",
        "ms-python.python"
    ]
}
